<div>
    <h3>Email: <%=@user.email %></h3>
    <h3>Last sign in: <%=@user.last_sign_in_at%></h3>

      <div class="page-header">
      <h1> User Images: </h1>
      </div>
      <table class="table table-responsive table-striped">
        <thead>

        </thead>
        <tbody>
          <% @user.images.each do |image| %>
            <tr>
              <td><%= image_tag(image.user.avatar.thumb.url) %></td>
              <td><%= image.name %></td>
              <td><%= image.picture.index.url %> </td>
              <td><%= image.category %> </td>
              <td> <%= "Posted" %> <%= (Time.now - image.created_at).to_i/3600%> <%= "hours ago" %></td>
              <td>
                <% if current_user == image.user %>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                            edit_image_path(image), :class => 'btn btn-default btn-xs' %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                            image_path(image),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :class => 'btn btn-xs btn-danger' %>
                            <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>


</div>
